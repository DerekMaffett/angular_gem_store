(function() {
  var app = angular.module('StoreDirectives', []);

  app.directive("productDescription", function() {
    return {
      restrict: 'A',
      templateUrl: "<%= asset_path('gem_store_app/products/views/description.html') %>"
    };
  });

  app.directive("productReviews", function() {
    return {
      restrict: 'A',
      templateUrl: "<%= asset_path('gem_store_app/products/views/reviews.html') %>"
    };
  });

  app.directive("productSpecs", function() {
    return {
      restrict:"A",
      templateUrl: "<%= asset_path('gem_store_app/products/views/specs.html') %>"
    };
  });

  app.directive("productTabs", function() {
    return {
      restrict: "A",
      templateUrl: "<%= asset_path('gem_store_app/products/views/tabs.html') %>",
      controller: ['$scope', function($scope) {
        $scope.tab = 1;

        $scope.isSet = function(checkTab) {
          return $scope.tab === checkTab;
        };

        $scope.setTab = function(activeTab) {
          $scope.tab = activeTab;
        };
      }],
    };
  });

  app.directive("productGallery", function() {
    return {
      restrict: "A",
      templateUrl: "<%= asset_path('gem_store_app/products/views/gallery.html') %>",
      controller: ['$scope', function($scope) {
        $scope.current = 0;
        $scope.setCurrent = function(imageNumber){
          $scope.current = imageNumber || 0;
        };
      }],
    };
  });
})();
